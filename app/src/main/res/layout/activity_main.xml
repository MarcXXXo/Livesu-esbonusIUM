<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    android:gravity="center"
    tools:context=".MainActivity">


    <!--Label-->

    <!-- Logo -->
    <TextView
        android:id="@+id/labelUsr"
        android:layout_width="76dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/fontr"
        android:gravity="center"
        android:text="Username :"
        android:textAlignment="center"
        android:textColor="@color/Bianco"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_logo" />

    <TextView
        android:id="@+id/labelPw"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fontr"
        android:gravity="center"
        android:text="Password :"
        android:textAlignment="center"
        android:textColor="@color/Bianco"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelUsr" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:src="@mipmap/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/sub_logo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontr"
        android:text="EsBonusIUM"
        android:textAlignment="center"
        android:textColor="@color/Bianco"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />


    <!-- Username -->
    <EditText
        android:id="@+id/inputNome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:baselineAligned="false"
        android:fontFamily="@font/fontrobliquo"
        android:inputType="text"
        android:textColor="@color/Bianco"
        android:textColorHint="@color/Bianco"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toEndOf="@+id/labelUsr"
        app:layout_constraintTop_toBottomOf="@+id/sub_logo" />


    <!-- Password -->
    <EditText
        android:id="@+id/inputPw"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/fontrobliquo"
        android:textColor="@color/Bianco"
        android:inputType="textPassword"
        android:textColorHint="@color/Bianco"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/labelPw"
        app:layout_constraintTop_toBottomOf="@+id/inputNome" />

    <!-- Bottone -->











    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPw">

        <TextView
            android:id="@+id/nonhai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Non hai ancora un account? "
            android:textColor="@color/Bianco"
            android:textSize="14sp" />

        <!-- Link per Registrarsi -->
        <TextView
            android:id="@+id/Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Registrati"
            android:textColor="@color/link"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/accediBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:background="@color/Bottone"
        android:fontFamily="@font/fontr"
        android:text="Accedi"
        android:textColor="@color/Bianco"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>